# Budget App - Production Environment Configuration
# Copy this file to .env and fill in the values

# Environment
NODE_ENV=production

# Database Configuration
DB_NAME=budget_app_prod
DB_USER=budget_admin
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE_MIN_16_CHARS

# JWT Configuration
JWT_SECRET=CHANGE_ME_STRONG_SECRET_HERE_MIN_32_CHARS

# External APIs
GEMINI_API_KEY=your_gemini_api_key_here

# URLs (Update with your actual domain)
FRONTEND_URL=https://budgetapp.site
REACT_APP_API_URL=https://budgetapp.site/api
ALLOWED_ORIGINS=https://budgetapp.site,https://www.budgetapp.site

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Redis (for caching - future enhancement)
# REDIS_HOST=localhost
# REDIS_PORT=6379
